= form_for @pizza do |f|
  - if @pizza.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pizza.errors.count, "error")} prohibited this pizza from being saved:"
      %ul
        - @pizza.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price, class: :text_field, step: :any
  .field
    = f.label :ingredients
    = f.text_area :ingredients
  .actions
    = f.submit 'Save'
